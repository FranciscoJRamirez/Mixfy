<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/loginParent"
    tools:context=".UpdateProfileFragment">

    <LinearLayout
        style="@style/parent"
        android:background="@drawable/login_shape_bk"
        android:orientation="vertical"
        android:layout_weight="3">

        <ImageView
            style="@style/parent"
            android:background="@drawable/ic_login_bk"
            android:contentDescription="login background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <androidx.cardview.widget.CardView
            style="@style/loginCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/whiteCardColor"
            android:elevation="5dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                style="@style/linearParent"
                android:layout_gravity="center"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtUpdateProfile"
                    style="@style/headerTextPrimary"
                    android:layout_marginTop="20dp"
                    android:text="Editar Perfil" />

                <TextView
                    android:id="@+id/txtInName"
                    style="@style/parent"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primaryTextColor"
                    tools:text="Nombre:" />

                <EditText
                    android:id="@+id/editTxtName"
                    style="@style/modifiedEditText"
                    android:hint="Nombre"
                    android:inputType="text"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/txtInPhone"
                    style="@style/parent"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primaryTextColor"
                    tools:text="Número de celular:" />

                <EditText
                    android:id="@+id/editTxtCel"
                    style="@style/modifiedEditText"
                    android:hint="Número de celular"
                    android:inputType="text"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/txtInEmail"
                    style="@style/parent"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primaryTextColor"
                    tools:text="Correo electrónico:" />

                <EditText
                    android:id="@+id/edTxtEmail"
                    style="@style/modifiedEditText"
                    android:hint="Correo electrónico"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />


                <Button
                    android:id="@+id/btnSendProfile"
                    style="@style/loginButton"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Enviar" />

                <TextView
                    android:id="@+id/txtBackProfile2"
                    style="@style/parent"
                    android:clickable="true"
                    android:layout_marginTop="20dp"
                    android:text="Regresar"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>


