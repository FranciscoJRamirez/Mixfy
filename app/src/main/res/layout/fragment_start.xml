<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    style="@style/loginParent"
    android:orientation="vertical"
    tools:context=".startFragment"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/parent"
                android:layout_weight="3"
                android:background="@drawable/login_shape_bk"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnSettings"
                    style="@style/parent"
                    android:background="@drawable/ic_login_bk"
                    android:contentDescription="login background" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo" />

                <androidx.cardview.widget.CardView
                    style="@style/loginCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/whiteCardColor"
                    android:elevation="5dp"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtPromos"
                                style="@style/parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_horizontal"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="12sp"
                                android:text="Promos tomadas" />

                            <TextView
                                android:id="@+id/txtNPromos"
                                style="@style/parent"
                                android:gravity="center_horizontal"
                                android:textColor="#0C0C0C"
                                android:textSize="18sp"
                                android:text="3" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtRec"
                                style="@style/parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_horizontal"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="12sp"
                                android:text="Recetas Realizadas" />

                            <TextView
                                android:id="@+id/txtNRec"
                                style="@style/parent"
                                android:gravity="center_horizontal"
                                android:textColor="#0C0C0C"
                                android:textSize="18sp"
                                android:text="17" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtRest"
                                style="@style/parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_horizontal"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="12sp"
                                android:text="Restaurantes visitados" />

                            <TextView
                                android:id="@+id/txtNRest"
                                style="@style/parent"
                                android:gravity="center_horizontal"
                                android:textColor="#0C0C0C"
                                android:textSize="18sp"
                                android:text="9" />
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="60dp"
                    android:paddingTop="80dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/correo" />

                        <TextView
                            android:id="@+id/txtCorreo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="2"
                            android:textColor="@color/primaryTextColor"
                            android:text="Correo" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/celular" />

                        <TextView
                            android:id="@+id/txtCelular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="2"
                            android:textColor="@color/primaryTextColor"
                            android:text="Número de celular" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/favs" />

                        <TextView
                            android:id="@+id/txtFavs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="2"
                            android:textColor="@color/primaryTextColor"
                            android:text="Favoritos"
                            android:clickable="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="68dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:src="@drawable/ayuda" />

                        <TextView
                            android:id="@+id/txtAyuda"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="1"
                            android:textColor="@color/primaryTextColor"
                            android:text="Ayuda"
                           />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSignOut"
                        style="@style/loginButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:text="Cerrar Sesión" />
                </LinearLayout>
            </LinearLayout>

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/groupFab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:fab_addButtonColorNormal="@color/colorPrimary"
                app:fab_addButtonColorPressed="#0C0C0C"
                app:fab_labelStyle="@style/etiqueta">

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_colorNormal="#FFF"
                    app:fab_icon="@drawable/ic_profile"
                    app:fab_size="normal"
                    app:fab_title="Editar perfil" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_colorNormal="#FFF"
                    app:fab_icon="@drawable/ic_edit"
                    app:fab_size="normal"
                    app:fab_title="Cambiar contraseña" />
            </com.getbase.floatingactionbutton.FloatingActionsMenu>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>


