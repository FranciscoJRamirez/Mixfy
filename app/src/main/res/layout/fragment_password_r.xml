<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
style="@style/loginParent"
tools:context=".PasswordRFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/frame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/parent"
                android:layout_weight="3"
                android:background="@drawable/login_shape_bk"
                android:orientation="vertical">

                <ImageView
                    style="@style/parent"
                    android:background="@drawable/ic_login_bk"
                    android:contentDescription="login background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo" />

                <androidx.cardview.widget.CardView
                    style="@style/loginCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/whiteCardColor"
                    android:elevation="5dp"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/txtPasswordR"
                            style="@style/headerTextPrimary"
                            android:layout_marginTop="20dp"
                            android:text="Reestablecer Contraseña" />

                        <TextView
                            android:id="@+id/txtInputEmail"
                            style="@style/parent"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/primaryTextColor"
                            tools:text="Correo eléctronico" />

                        <EditText
                            android:id="@+id/edTextEmail"
                            style="@style/modifiedEditText"
                            android:hint="Correo electrónico"
                            android:inputType="textEmailAddress"
                            android:maxLines="1" />

                        <TextView
                            android:id="@+id/txtInputPhone"
                            style="@style/parent"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/primaryTextColor"
                            tools:text="Número de celular:" />

                        <EditText
                            android:id="@+id/edTextPhone"
                            style="@style/modifiedEditText"
                            android:hint="Número de celular"
                            android:inputType="text"
                            android:maxLines="1" />

                        <Button
                            android:id="@+id/cirSendButton"
                            style="@style/loginButton"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:text="Enviar" />

                        <TextView
                            android:id="@+id/txtBack"
                            style="@style/parent"
                            android:layout_marginTop="20dp"
                            android:clickable="true"
                            android:text="Regresar"
                            android:textAlignment="center"
                            android:textColor="@color/primaryTextColor"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

